<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="9"
        android:gravity="center"
        android:text="@string/message"
        android:textColor="@color/message_textcolor"
        android:textSize="@dimen/message_textsize" />

    <EditText
        android:id="@+id/messageEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/change_message"
        android:inputType="text"
        android:textColor="@color/message_edit_textcolor"
        android:textSize="@dimen/message_textsize"
        android:autofillHints="@string/change_message"/>

</LinearLayout>